---
import MainLayout from '../layouts/MainLayout.astro';
import LoginForm from '../components/LoginForm';
---

<MainLayout title="Login" useDashboardLayout={false}>
  <div class="flex min-h-[80vh] flex-col justify-center">
    <div class="mx-auto w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Work Order Management System</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Sign in to access your dashboard</p>
      </div>

      <div class="rounded-lg bg-white dark:bg-gray-800 p-8 shadow-md">
        <LoginForm client:load />
      </div>

      <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
        <p>Demo Credentials:</p>
        <p class="mt-1">
          <strong>Production Manager:</strong> manager / password
        </p>
        <p class="mt-1">
          <strong>Operator:</strong> operator1 / password
        </p>
      </div>
    </div>
  </div>
</MainLayout>
